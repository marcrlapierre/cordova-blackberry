#!/bin/sh
LOCAL_NODE_BIN=$(pwd)/$(dirname "$0")/dependencies/node/bin

if [ ! -z "$CORDOVA_NODE" ]; then
    #$CORDOVA_NODE already set, exit script.
    return
fi

if [ -x $LOCAL_NODE_BIN ]; then
    #set CORDOVA_NODE to local node version, if exists
    CORDOVA_NODE=$LOCAL_NODE_BIN
else
    #set CORDOVA_NODE to whichever node is on path
    CORDOVA_NODE=$(dirname $(command -v node))
fi

export CORDOVA_NODE=$CORDOVA_NODE
